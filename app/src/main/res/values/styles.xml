<?xml version="1.0" encoding="utf-8"?>
<resources
        xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Base.Theme.App">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Base.Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="scrimBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="textAppearanceHeadline1">@style/Base.Theme.App.TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Base.Theme.App.TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Base.Theme.App.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Base.Theme.App.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Base.Theme.App.TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Base.Theme.App.TextAppearance.Headline6</item>

        <item name="textAppearanceSubtitle1">@style/Base.Theme.App.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Base.Theme.App.TextAppearance.Subtitle2</item>

        <item name="textAppearanceBody1">@style/Base.Theme.App.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Base.Theme.App.TextAppearance.Body2</item>

        <item name="textAppearanceCaption">@style/Base.Theme.App.TextAppearance.Caption</item>

        <item name="textAppearanceButton">@style/Base.Theme.App.TextAppearance.Button</item>

        <item name="textAppearanceOverline">@style/Base.Theme.App.TextAppearance.Overline</item>

        <item name="shapeAppearanceSmallComponent">@style/Base.Theme.App.ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/Base.Theme.App.ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/Base.Theme.App.ShapeAppearance.LargeComponent</item>

        <item name="preferenceTheme">@style/Base.ThemeOverlay.App.Preference</item>

        <item name="toolbarStyle">@style/Base.Theme.App.Widget.Toolbar</item>

        <item name="borderlessButtonStyle">@style/Base.Theme.App.Widget.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Base.Theme.App.Widget.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Base.Theme.App.Widget.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Base.Theme.App.Widget.TextButton.Dialog.Flush</item>
        <item name="buttonBarButtonStyle">@style/Base.Theme.App.Widget.TextButton.Dialog.Flush</item>

        <item name="snackbarStyle">@style/Base.Theme.App.Widget.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Base.Theme.App.Widget.Snackbar.Action</item>
        <item name="snackbarTextViewStyle">@style/Base.Theme.App.Widget.Snackbar.Text</item>

        <item name="android:windowAnimationStyle">@style/Base.Theme.App.Animation.Activity</item>
        <item name="android:popupMenuStyle">@style/Base.Theme.App.Widget.PopupMenu</item>
        <item name="android:progressBarStyle">@style/Base.Theme.App.Widget.ProgressBar</item>
    </style>

    <!-- Animations -->
    <style name="Base.Theme.App.Animation.Activity" parent="Animation.MaterialComponents.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
        <item name="android:activityOpenEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/nav_default_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/nav_default_pop_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/nav_default_pop_exit_anim</item>
    </style>

    <!-- Themes -->
    <style name="Base.ThemeOverlay.App.Preference" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="Base.ThemeOverlay.App.Toolbar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/toolbar_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Headlines -->
    <style name="Base.Theme.App.TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/headline1_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/headline2_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/headline3_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/headline4_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/headline5_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/headline6_font_size</item>
    </style>

    <!-- Subtitles -->
    <style name="Base.Theme.App.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/subtitle1_font_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/subtitle2_font_size</item>
    </style>

    <!-- Body -->
    <style name="Base.Theme.App.TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/body1_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/body2_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/caption_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/overline_font_size</item>
    </style>

    <!-- Shapes -->
    <style name="Base.Theme.App.ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_component_corner_size</item>
    </style>

    <style name="Base.Theme.App.ShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_component_corner_size</item>
    </style>

    <style name="Base.Theme.App.ShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/large_component_corner_size</item>
    </style>

    <!-- Widgets -->
    <style name="Base.Theme.App.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetStart">@dimen/toolbar_content_inset_start</item>
        <item name="popupTheme">@style/Base.ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="Base.Theme.App.Widget.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Base.Theme.App.Widget.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Base.Theme.App.Widget.TextButton.Dialog.Flush" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Base.Theme.App.Widget.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">?attr/colorError</item>
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

    <style name="Base.Theme.App.Widget.Snackbar.Action" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

    <style name="Base.Theme.App.Widget.Snackbar.Text" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

    <style name="Base.Theme.App.Widget.PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">16dp</item>
        <item name="android:dropDownVerticalOffset">-16dp</item>
    </style>

    <style name="Base.Theme.App.Widget.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Base.Theme.App.Widget.WeatherIconView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="fontPath">fonts/WeatherIcons-regular.ttf</item>
    </style>

    <!-- Custom styles -->
    <style name="Base.Theme.App.TextAppearance.AppMotto" parent="Base.Theme.App.TextAppearance.Headline2">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.AppLogo" parent="">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/app_logo_font_size</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.CurrentTime" parent="Base.Theme.App.TextAppearance.Headline1">
        <item name="android:textSize">@dimen/current_time_font_size</item>
    </style>

    <style name="Base.Theme.App.TextAppearance.CurrentTimeAmPm" parent="Base.Theme.App.TextAppearance.Headline3" />

    <style name="Base.Theme.App.TextAppearance.CurrentTemperature" parent="Base.Theme.App.TextAppearance.Headline2">
        <item name="android:textSize">@dimen/current_temperature_font_size</item>
    </style>

</resources>
